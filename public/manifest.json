  "shortcuts": [
    {
      "name": "Nuevo Material",
      "short_name": "Nuevo",
      "description": "Crear un nuevo material en el inventario",
      "url": "/create-material",
      "icons": [
        {
          "src": "assets/icons/shortcut-new.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Escanear QR",
      "short_name": "Escanear",
      "description": "Abrir el escáner de códigos QR",
      "url": "/codelector",
      "icons": [
        {
          "src": "assets/icons/shortcut-scan.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Inventario",
      "short_name": "Inventario",
      "description": "Ver el inventario de materiales",
      "url": "/materiales",
      "icons": [
        {
          "src": "assets/icons/shortcut-inventory.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+founditmovil",
      "url": "/?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "image/*": [".png", ".jpg", ".jpeg", ".gif"],
        "text/csv": [".csv"],
        "application/json": [".json"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/csv", "application/json"]
        }
      ]
    }
  },
  "permissions": [
    "camera",
    "geolocation",
    "notifications",
    "storage"
  ],
  "features": [
    "Cross Platform",
    "fast",
    "simple",
    "QR Scanner",
    "Material Management",
    "Inventory Control"
  ]
}
